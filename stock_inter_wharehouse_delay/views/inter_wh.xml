<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_inter_wh_tree" model="ir.ui.view">
            <field name="name">stock.inter_warehouse_delay.tree</field>
            <field name="model">stock.inter_warehouse_delay.delay</field>
            <field name="arch" type="xml">
                <tree string="Inter Wh">
                    <field name="source_wh_id" />
                    <field name="dest_wh_id" />
                    <field name="delay" />
                </tree>
            </field>
        </record>
        <record id="view_inter_wh_form" model="ir.ui.view">
            <field name="name">stock.inter_warehouse_delay.delay.tree</field>
            <field name="model">stock.inter_warehouse_delay.delay</field>
            <field name="arch" type="xml">
                <form string="Transit delay">
                    <sheet>
                        <group>
                            <field name="source_wh_id"/>
                            <field name="dest_wh_id"/>
                            <field name="delay" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_inter_wh_tree" model="ir.actions.act_window">
            <field name="name">inter_warehouse_delay</field>
            <field name="res_model">stock.inter_warehouse_delay</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="action_inter_wh_tree" id="menu_action_inter_wh_open" parent="stock.menu_warehouse_config" sequence="5" groups="base.group_no_one"/>
    </data>
</odoo>
