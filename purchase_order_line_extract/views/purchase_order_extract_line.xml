<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="purchase_order_extract_line_editable_tree" model="ir.ui.view">
            <field name="name">purchase.order.extract.line.editable.tree</field>
            <field name="model">purchase.order.extract.line</field>
            <field name="arch" type="xml">
                <tree string="Purchase Order Lines" create="0" editable="top">
                    <field name="purchase_id"/>
                    <field name="partner_id" string="Supplier"/>
                    <field name="product_id"/>
                    <field name="date_planned" widget="date"/>
                    <field name="quantity"/>
                    <field name="extract_quantity"/>
                    <field name="product_uom" groups="product.group_uom"/>
                </tree>
            </field>
        </record>

        <record id="purchase_order_extract_line_action" model="ir.actions.act_window">
            <field name="name">Purchase Line To Extract</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order.extract.line</field>
            <field name="domain">[]</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
<!--            <field name="search_view_id" ref="purchase.purchase_order_line_search"/>-->
            <field name="help" type="html">
              <p>
                View to select purchase line to extract to a new Purchase Order
              </p>
            </field>
        </record>

    </data>
</openerp>
